from typing import Any

from dify_plugin import ToolProvider
from dify_plugin.errors.tool import ToolProviderCredentialValidationError


class MemmachinePluginProvider(ToolProvider):
    def _validate_credentials(self, credentials: dict[str, Any]) -> None:
        try:
            api_key = (credentials or {}).get("memmachine_api_key")
            if not api_key or not str(api_key).strip():
                raise ValueError("memmachine_api_key is required")

{% if enable_base_url_credential %}
            base_url = (credentials or {}).get("memmachine_base_url")
            if base_url is not None and str(base_url).strip() != "":
                value = str(base_url).strip().lower()
                if not (value.startswith("http://") or value.startswith("https://")):
                    raise ValueError("memmachine_base_url must start with http:// or https://")
{% endif %}
        except Exception as e:
            raise ToolProviderCredentialValidationError(str(e))

