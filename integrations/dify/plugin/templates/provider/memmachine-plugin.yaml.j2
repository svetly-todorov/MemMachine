identity:
  author: "memverge"
  name: "memmachine-plugin"
  label:
    en_US: "memmachine-plugin"
    zh_Hans: "memmachine-plugin"
    pt_BR: "memmachine-plugin"
    ja_JP: "memmachine-plugin"
  description:
    en_US: "memmachine plugin"
    zh_Hans: "memmachine plugin"
    pt_BR: "memmachine plugin"
    ja_JP: "memmachine plugin"
  icon: "icon.png"

credentials_for_provider:
  memmachine_api_key:
    type: secret-input
    required: true
    label:
      en_US: MemMachine API key
      zh_Hans: MemMachine API key
    placeholder:
      en_US: Please input your MemMachine API key
      zh_Hans: 请输入你的 MemMachine API key
    help:
      en_US: Get your API key from MemMachine API server platform
      zh_Hans: 从 MemMachine API server platform 获取你的 API key
    url: https://console.memmachine.ai/

{% if enable_base_url_credential %}
  memmachine_base_url:
    type: text-input
    required: false
    label:
      en_US: MemMachine Base URL
      zh_Hans: MemMachine Base URL
    placeholder:
      en_US: "{{ default_base_url }}"
      zh_Hans: "{{ default_base_url }}"
    help:
      en_US: "Optional. Override the MemMachine API base URL (e.g. self-hosted)."
      zh_Hans: "可选：覆盖 MemMachine API base URL（例如自托管）。"
{% endif %}


